<!DOCTYPE html>
<html lang="ru">
  <%- include('partials/head', { title }) %>
  <body>
    <div class="profile row">
      <%- include('partials/sidebar') %>
      <div class="col s10">
        <div class="container">
          <h4 class="title">Профиль</h4>
          <ul class="works collection">
            <% if(works.length) { works.forEach(work => { %>
              <li class="works__item collection-item" data-id="<%= work._id %>">
                <a class="works__remove btn-floating btn-small waves-effect waves-light red"><i class="material-icons">close</i></a>
                <p><b>Название:</b> <%= work.name %></p>
                <p><b>Номинация:</b> <%= nominations.find(nomination => nomination._id.toString() === work.nomination.toString()).name %></p>
                <p><a class="blue-text text-darken-2" href="/uploads/<%= work.file %>" target="_blank">Прикрепленный файл</a></p>
              </li>
            <% })} else { %>
              <li class="collection-item">Список работ пуст</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>